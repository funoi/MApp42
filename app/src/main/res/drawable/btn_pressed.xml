<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">
    <!-- 圆角半径 -->
    <corners android:radius="8dp" />
    <!-- 填充颜色 -->
    <solid android:color="@color/pink" />
    <!-- 边框  -->
    <padding
        android:bottom="1dp"
        android:left="1dp"
        android:right="1dp"
        android:top="1dp" />
    <stroke
        android:width="1dp"
        android:color="@color/red" />
    <!--  边框宽度  -->
    <size
        android:width="30dp"
        android:height="30dp" />
</shape>